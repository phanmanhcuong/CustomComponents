<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:example="http://schemas.android.com/apk/com.example.cuongphan.customcomponents_redview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <view
            android:layout_marginLeft="10px"
            android:layout_width="200px"
            android:layout_height="200px"
            android:id="@+id/view1"
            class="com.example.cuongphan.customcomponents_redview.RedView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <view
        android:id="@+id/view2"
        android:layout_marginLeft="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.example.cuongphan.customcomponents_redview.ColoredView"
        example:original_background = "#3F51B5"
        example:after_background="#FF4081"
        example:dimension_width="300"
        example:dimension_height="300"
        />
</LinearLayout>
